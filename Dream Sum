#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
     int arr[20],n,i,sum=0;
        scanf("%d",&n);
         for(i=0;i<n;i++)
            scanf("%d",&arr[i]);
           if(n % 2==0)
             {
              for(i=0;i<n;i++)
                  {
                      sum+=arr[i];
                  }

                       if(sum==-1)
                     {

                        printf("Yes");
                      }
                 else 
                     {
                     printf("No");
                     }
               }
    else
          printf("No");
    return 0;
}
